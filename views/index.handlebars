<div id ="wrapper">

<h1 id = "title">Das Burgers</h1>
<img src="https://vignette.wikia.nocookie.net/spongebob/images/d/d4/Krabby_Patty_transparentpng.png/revision/latest/scale-to-width-down/350?cb=20170310181007" alt="">
<div class = "container">
<div class = "row">
<div class = "col-mid-4">
<h3>Burgers waiting to be devoured!</h3>
<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
<div class = "col-mid-4">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Type of burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    {{!-- <label for="sleepy">Sleepy?</label><br> --}}
    <input type="radio" name="sleepy" class = "circle" value="1" checked><br>
    {{!-- <input type="radio" name="sleepy" value="0"> Awake --}}
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
<div class = "col-mid-4">
  <h2>Burgers that got devoured!</h2>
<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>
</div>
</div>
